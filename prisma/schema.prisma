generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  phone     String?
  firstName String?
  lastName  String?
  password  String
  roles     Roles[]  @default([CUSTOMER])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("User")
}

enum Roles {
  ADMIN
  CUSTOMER
}
